generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Guild {
  id            String         @id
  name          String?
  users         User[]
  reactionMaps  ReactionMap[]
  levelRoles    LevelRole[]
  voiceSessions VoiceSession[]

  xpCooldown   Int @default(20) // in seconds
  xpPerMessage Int @default(15)
  xpPerMinute  Int @default(5)
}

model User {
  id        Int    @id @default(autoincrement())
  guildId   String
  discordId String @unique

  xpTotal   Int @default(0)
  xpCurrent Int @default(0)
  xpNext    Int @default(155)
  level     Int @default(1)

  lastMessage DateTime? // Timestamp of the last message sent by the user

  guild Guild @relation(fields: [guildId], references: [id], onDelete: Cascade)

  @@index([guildId, discordId])
}

model ReactionMap {
  id              String  @id @default(cuid())
  guildId         String
  messageId       String
  emoji           String
  roleId          String
  removeOnUnreact Boolean @default(false) // Whether to remove the role when the user unreacts

  guild Guild @relation(fields: [guildId], references: [id], onDelete: Cascade)

  @@unique([messageId, emoji])
}

model LevelRole {
  id       String @id @default(cuid())
  guildId  String
  roleId   String
  levelReq Int

  guild Guild @relation(fields: [guildId], references: [id], onDelete: Cascade)

  @@unique([guildId, levelReq])
}

model VoiceSession {
  id        String   @id @default(cuid())
  guildId   String
  userId    String
  channelId String
  startTime DateTime @default(now())
  lastTick  DateTime @default(now())
  open      Boolean  @default(true)

  guild Guild @relation(fields: [guildId], references: [id], onDelete: Cascade)

  @@index([guildId, userId, open])
}
